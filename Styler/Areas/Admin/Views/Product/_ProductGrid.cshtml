@model IEnumerable<Styler.Areas.Admin.Models.ProductsViewModel>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Description
            </th>
            <th>
                Price
            </th>
            <th>
                ქმედება
            </th>
        </tr>
    </thead>
    @foreach (var product in Model)
    {
        <tr>
            <td>
                @product.ProductName
            </td>
            <td>
                @product.Description
            </td>
            <td>
                $@product.Price
            </td>
            <td>
                <a class="btn btn-warning" href="/Admin/Product/Edit/@product.ProductID">რედაქტირება</a>
                <a class="btn btn-danger deleteProduct" href="#" data-id="@product.ProductID">წაშლა</a>
            </td>
        </tr>
    }
</table>
<div class="">
    <span class="btn btn-primary">1</span>
</div>
